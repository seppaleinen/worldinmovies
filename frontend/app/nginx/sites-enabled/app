upstream backend {
  # for UNIX domain socket setups
  server unix:/run/gunicorn.sock max_fails=3 fail_timeout=30s;
}

server {
    listen 80;
    server_name worldinmovies;
    charset utf-8;

    location /static {
        expires 7d;
        proxy_cache STATIC;
        proxy_cache_valid 200 7d;
        add_header Cache-Control "public";
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
        root /var/www/app/;
        # Remove /static/ from the requested uri
        rewrite  ^/static/(.*) /$1 break;
        # Try the static folder first, and then the folder under that.
        try_files /static$uri $uri =404;
    }

    location /admin {
        auth_basic           "Administratorâ€™s Area";
        auth_basic_user_file /etc/apache2/.htpasswd;
        try_files $uri /index.html =404;
    }

    location /backend/ {
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      # we don't want nginx trying to do something clever with
      # redirects, we set the Host: header above already.
      proxy_redirect off;
      proxy_pass http://backend/;
      proxy_buffering off;
    }

    location / {
        root /var/www/app/;
        index  index.html index.htm;
        try_files $uri /index.html =404;
    }
}